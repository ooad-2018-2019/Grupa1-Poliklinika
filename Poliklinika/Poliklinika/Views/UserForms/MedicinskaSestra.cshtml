@{
    ViewData["Title"] = "Medicinska sestra main page";
}
<div class="container">
    <form>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    <div class="form-row">
                        <div class="col">
                            <label class="text-center" style="margin: 21px;height: 24px;padding: -19px;font-size: 44px;">Dobro došli!</label>
                            <div class="form-row">
                                <div class="col">
                                    <label>Pregled rasporeda</label>
                                    <div class="form-row">
                                        <div class="col"><button class="btn btn-primary" type="button">PREGLEDAJ</button></div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col"><label class="col-form-label">Uvid u kartone pacijenata</label></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col"><label class="col-form-label">Ime i prezime pacijenta</label></div>
                        <div class="col"><input class="form-control" type="text"></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><button class="btn btn-primary" type="button" style="width: 134px;">PRETRAGA</button></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><label class="col-form-label" style="width: 284px;">Zakazivanje termina</label></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><label class="col-form-label">Odaberite datum</label></div>
                        <div class="col"><input class="form-control" type="date"></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><label class="col-form-label">Odaberite vrijeme</label></div>
                        <div class="col"><input type="time" id="appt" min="9:00" max="18:00" required></div>
                    </div>
                    <div class="form-row">
                        <div class="col"></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><label class="col-form-label">Ime i prezime pacijenta</label></div>
                        <div class="col"><input class="form-control" type="text" placeholder="Unesite ime i prezime pacijenta"></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><label class="col-form-label">Pregled dostupnih termina</label></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><button class="btn btn-primary" type="button">PREGLEDAJ TERMINE</button></div>
                        <div class="col"><button class="btn btn-primary" type="button">ZAKAŽI TERMIN</button></div>
                    </div>
                </div>
                <div class="col" style="width: 533px;">
                    <div class="form-row">
                        <div class="col"><label class="col-form-label text-uppercase text-center border rounded" style="width: 157px;height: 45px;margin: 53px;">Pregled kartona</label></div>
                    </div>
                    <div class="form-row">
                        <div class="col" style="width: 371px;height: 130px;margin: 12px;">
                            <ul>
                                <li>Item 1</li>
                                <li>Item 2</li>
                                <li>Item 3</li>
                                <li>Item 4</li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col"><label class="col-form-label">ODOBRAVANJE ZAHTJEVA ZA TERMINE</label></div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <ul>
                                <li>Item 1</li>
                                <li>Item 2</li>
                                <li>Item 3</li>
                                <li>Item 4</li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col"><button class="btn btn-primary" type="button">ODOBRI</button></div>
                        <div class="col"><button class="btn btn-primary" type="button">ODBIJ</button></div>
                    </div>
                </div>
                <div class="col">
                    <div class="form-row">
                        <div class="col" style="width: 356px;height: 151px;"><label class="col-form-label" style="width: 169px;height: 97px;margin: 45px;">Pregled slobodnih termina</label></div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <ul style="width: 356px;height: 89px;margin: 18px;">
                                <li>Item 1</li>
                                <li>Item 2</li>
                                <li>Item 3</li>
                                <li>Item 4</li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col"><label class="col-form-label">Bzaa lijekova (pregled i dodavanje)</label></div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <ul>
                                <li>Item 1</li>
                                <li>Item 2</li>
                                <li>Item 3</li>
                                <li>Item 4</li>
                            </ul>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col"><input class="form-control" type="text" placeholder="Unesite naziv lijeka"></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><input class="form-control" type="text" placeholder="Unesite količinu lijeka"></div>
                    </div>
                    <div class="form-row">
                        <div class="col"><button class="btn btn-primary" type="button">DODAJ LIJEK</button></div>
                        <div class="col"><button class="btn btn-primary" type="button">SMANJI KOLIČINU</button></div>
                        <div class="col"><button class="btn btn-primary" type="button">POVEČAJ KOLIČINU</button></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>